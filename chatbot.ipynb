        page_icon="ðŸ¤–",         # Emoji icon
        layout="wide",          # Wide layout for better appearance
        initial_sidebar_state="expanded"  # Sidebar open by default
    )

    # Custom CSS styling for chatbot theme and background
    st.markdown("""
        <style>
